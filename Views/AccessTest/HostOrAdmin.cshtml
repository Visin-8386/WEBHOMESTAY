@{
    ViewData["Title"] = "Demo Access Control - Public";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-shield-alt me-2"></i>
                        Demo Access Control System
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>@ViewBag.Message</strong>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Thông tin người dùng hiện tại:</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <strong>Đăng nhập:</strong> 
                                    @if (User.Identity?.IsAuthenticated == true)
                                    {
                                        <span class="badge bg-success">Đã đăng nhập</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Chưa đăng nhập</span>
                                    }
                                </li>
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <li class="list-group-item">
                                        <strong>Tên:</strong> @(User.Identity.Name ?? "Unknown")
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Roles:</strong>
                                        @{
                                            var roles = User.Claims.Where(c => c.Type == System.Security.Claims.ClaimTypes.Role)
                                                              .Select(c => c.Value).ToList();
                                        }
                                        @if (roles.Any())
                                        {
                                            @foreach (var role in roles)
                                            {
                                                <span class="badge bg-primary me-1">@role</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Không có role</span>
                                        }
                                    </li>
                                }
                            </ul>
                        </div>
                        
                        <div class="col-md-6">
                            <h5>Test các trang khác:</h5>
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("Public", "AccessTest")" class="btn btn-success">
                                    <i class="fas fa-globe me-2"></i>
                                    Trang Public
                                </a>
                                <a href="@Url.Action("Authenticated", "AccessTest")" class="btn btn-info">
                                    <i class="fas fa-user me-2"></i>
                                    Trang Authenticated
                                </a>
                                <a href="@Url.Action("HostOnly", "AccessTest")" class="btn btn-warning">
                                    <i class="fas fa-home me-2"></i>
                                    Trang Host Only
                                </a>
                                <a href="@Url.Action("AdminOnly", "AccessTest")" class="btn btn-danger">
                                    <i class="fas fa-crown me-2"></i>
                                    Trang Admin Only
                                </a>
                                <a href="@Url.Action("HostOrAdmin", "AccessTest")" class="btn btn-primary">
                                    <i class="fas fa-users-cog me-2"></i>
                                    Trang Host hoặc Admin
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="text-center">
                        @if (User.Identity?.IsAuthenticated != true)
                        {
                            <a href="@Url.Action("Login", "Account")" class="btn btn-primary me-2">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Đăng nhập
                            </a>
                            <a href="@Url.Action("Register", "Account")" class="btn btn-secondary">
                                <i class="fas fa-user-plus me-2"></i>
                                Đăng ký
                            </a>
                        }
                        else
                        {
                            <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger">
                                    <i class="fas fa-sign-out-alt me-2"></i>
                                    Đăng xuất
                                </button>
                            </form>
                        }
                        
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary ms-2">
                            <i class="fas fa-home me-2"></i>
                            Về trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
