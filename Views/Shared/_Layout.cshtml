<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Homestay Booking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebHS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        html, body {
            height: 100%;
        }
        body {
            display: flex;
            flex-direction: column;
            min-height: 100%;
        }
        main {
            flex: 1 0 auto;
        }
        footer {
            flex-shrink: 0;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column h-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i> Homestay Booking
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Homestay" asp-action="Index">Danh sách Homestay</a>
                        </li>                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Review" asp-action="AllReviews">Đánh giá</a>
                        </li>
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Messaging" asp-action="Index">
                                    <i class="fas fa-comments"></i> Tin nhắn
                                    <span id="unread-messages-badge" class="badge bg-danger ms-1" style="display: none;">0</span>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">Về Chúng Tôi</a>
                        </li>
                        @if (User.IsInRole("Host"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    Quản lý Host
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Host" asp-action="Dashboard">Dashboard</a></li>
                                    <li><a class="dropdown-item" asp-controller="Homestay" asp-action="Create">Thêm Homestay</a></li>
                                    <li><a class="dropdown-item" asp-controller="Host" asp-action="ManageBookings">Quản lý đặt phòng</a></li>
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    Quản trị
                                </a>                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Dashboard Admin</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Users">Quản lý người dùng</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Homestays">Quản lý Homestay</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Bookings">Quản lý đặt phòng</a></li>
                                    <li><a class="dropdown-item" asp-controller="Promotion" asp-action="Index">Quản lý khuyến mãi</a></li>
                                    <li><a class="dropdown-item" asp-controller="Messaging" asp-action="AdminRequests">
                                        <i class="fas fa-envelope me-2"></i>Yêu cầu nhắn tin
                                        <span id="admin-requests-badge" class="badge bg-warning ms-1" style="display: none;">0</span>
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Reports">Báo cáo</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user"></i> @User.Identity.Name
                                    @{
                                        var userRole = "User";
                                        var badgeClass = "bg-secondary";
                                        if (User.IsInRole("Admin"))
                                        {
                                            userRole = "Admin";
                                            badgeClass = "bg-danger";
                                        }
                                        else if (User.IsInRole("Host"))
                                        {
                                            userRole = "Host";
                                            badgeClass = "bg-success";
                                        }
                                    }
                                    <span class="badge @badgeClass ms-1">@userRole</span>
                                </a>                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Thông tin cá nhân</a></li>
                                    <li><a class="dropdown-item" asp-controller="Booking" asp-action="MyBookings">Booking của tôi</a></li>
                                    <li><a class="dropdown-item" asp-controller="Messaging" asp-action="Index">
                                        <i class="fas fa-comments me-2"></i>Tin nhắn
                                        <span id="unreadMessagesCount" class="badge bg-danger ms-1" style="display: none;"></span>
                                    </a></li>
                                    @if (!User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item" href="javascript:void(0)" onclick="requestAdminMessage()">
                                            <i class="fas fa-headset me-2"></i>Nhắn tin với Admin
                                        </a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-controller="Account" asp-action="Logout">
                                            <button type="submit" class="dropdown-item">Đăng xuất</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" style="margin-top: 70px;">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        @RenderBody()
    </main>

    <footer class="bg-dark text-white py-4 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Homestay Booking</h5>
                    <p>Nền tảng đặt phòng homestay hàng đầu Việt Nam</p>
                </div>
                <div class="col-md-3">
                    <h6>Liên kết</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50">Về chúng tôi</a></li>
                        <li><a href="#" class="text-white-50">Điều khoản</a></li>
                        <li><a href="#" class="text-white-50">Chính sách</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6>Hỗ trợ</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50">Trung tâm trợ giúp</a></li>
                        <li><a href="#" class="text-white-50">Liên hệ</a></li>
                        <li><a href="#" class="text-white-50">Báo cáo</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-3">
            <div class="text-center">
                <small>&copy; 2024 - Homestay Booking - All rights reserved</small>
            </div>        </div>
    </footer>
    
    <!-- Admin Message Request Modal -->
    @if (User.Identity!.IsAuthenticated && !User.IsInRole("Admin"))
    {
        <div class="modal fade" id="adminMessageModal" tabindex="-1" aria-labelledby="adminMessageModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="adminMessageModalLabel">
                            <i class="fas fa-headset me-2"></i>Nhắn tin với Admin
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="adminMessageText" class="form-label">Tin nhắn cho Admin:</label>
                            <textarea class="form-control" id="adminMessageText" rows="4" placeholder="Nhập câu hỏi hoặc yêu cầu hỗ trợ của bạn..."></textarea>
                            <div class="form-text">Admin sẽ nhận được thông báo và phản hồi bạn sớm nhất có thể.</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="button" class="btn btn-primary" onclick="sendAdminMessageRequest()">
                            <i class="fas fa-paper-plane me-2"></i>Gửi yêu cầu
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @if (User.Identity!.IsAuthenticated)
    {
        <script>            // Check for unread messages
            function checkUnreadMessages() {
                $.get('@Url.Action("GetUnreadCount", "Messaging")', function(response) {
                    if (response.success && response.count > 0) {
                        $('#unreadMessagesCount').text(response.count).show();
                        $('#unread-messages-badge').text(response.count).show();
                    } else {
                        $('#unreadMessagesCount').hide();
                        $('#unread-messages-badge').hide();
                    }
                });
            }
            
            @if (User.IsInRole("Admin"))
            {
                <text>
                // Check for admin message requests
                function checkAdminRequests() {
                    $.get('@Url.Action("GetAdminMessageRequests", "Messaging")', function(response) {
                        if (response.success && response.requests.length > 0) {
                            $('#admin-requests-badge').text(response.requests.length).show();
                        } else {
                            $('#admin-requests-badge').hide();
                        }
                    });
                }
                </text>
            }            // Check on page load
            $(document).ready(function() {
                checkUnreadMessages();
                @if (User.IsInRole("Admin"))
                {
                    <text>checkAdminRequests();</text>
                }
                
                // Check every 30 seconds
                setInterval(checkUnreadMessages, 30000);
                @if (User.IsInRole("Admin"))
                {
                    <text>setInterval(checkAdminRequests, 30000);</text>
                }
            });
            
            // Admin messaging functions
            function requestAdminMessage() {
                $('#adminMessageModal').modal('show');
            }
            
            function sendAdminMessageRequest() {
                const message = document.getElementById('adminMessageText').value.trim();
                
                if (!message) {
                    alert('Vui lòng nhập tin nhắn');
                    return;
                }
                
                fetch('@Url.Action("RequestAdminMessage", "Messaging")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        message: message
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        $('#adminMessageModal').modal('hide');
                        document.getElementById('adminMessageText').value = '';
                        alert('Yêu cầu nhắn tin đã được gửi tới Admin. Bạn sẽ nhận được phản hồi sớm!');
                    } else {
                        alert('Có lỗi xảy ra: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi gửi yêu cầu');
                });
            }
        </script>
    }
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
