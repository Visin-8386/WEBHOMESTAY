@using WebHSPromotionType = WebHS.Models.PromotionType
@model WebHS.ViewModels.HomestayReviewListViewModel

@{
    ViewData["Title"] = $"Đánh giá - {Model.HomestayName}";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Details", "Homestay", new { id = Model.HomestayId })">@Model.HomestayName</a></li>
                    <li class="breadcrumb-item active">Đánh giá</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="display-4 text-primary">@Model.AverageRating.ToString("F1")</h2>
                    <div class="text-warning mb-2">
                        @for(int i = 1; i <= 5; i++)
                        {
                            <i class="fas fa-star @(i <= Model.AverageRating ? "" : "text-muted")"></i>
                        }
                    </div>
                    <p class="text-muted">@Model.TotalReviews đánh giá</p>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">Phân bố đánh giá</h5>
                </div>
                <div class="card-body">
                    @for(int rating = 5; rating >= 1; rating--)
                    {
                        var count = Model.RatingDistribution.ContainsKey(rating) ? Model.RatingDistribution[rating] : 0;
                        var percentage = Model.TotalReviews > 0 ? (count * 100.0 / Model.TotalReviews) : 0;
                        
                        <div class="row align-items-center mb-2">
                            <div class="col-2">
                                <span>@rating <i class="fas fa-star text-warning"></i></span>
                            </div>
                            <div class="col-8">
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-warning" role="progressbar" style="width: @percentage%"></div>
                                </div>
                            </div>
                            <div class="col-2 text-right">
                                <small class="text-muted">@count</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Tất cả đánh giá (@Model.TotalReviews)</h5>
                </div>
                <div class="card-body">
                    @if(!Model.Reviews.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                            <h4>Chưa có đánh giá nào</h4>
                            <p class="text-muted">Homestay này chưa có đánh giá từ khách hàng.</p>
                        </div>
                    }
                    else
                    {
                        @foreach(var review in Model.Reviews)
                        {
                            <div class="media mb-4 pb-3 border-bottom">
                                <div class="media-object mr-3">
                                    @if(!string.IsNullOrEmpty(review.UserAvatar))
                                    {
                                        <img src="@review.UserAvatar" alt="@review.UserName" class="rounded-circle" style="width: 50px; height: 50px;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <i class="fas fa-user text-white"></i>
                                        </div>
                                    }
                                </div>
                                <div class="media-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h6 class="mb-1">@review.UserName</h6>
                                            <div class="text-warning">
                                                @for(int i = 1; i <= 5; i++)
                                                {
                                                    <i class="fas fa-star @(i <= review.Rating ? "" : "text-muted")"></i>
                                                }
                                            </div>
                                        </div>
                                        <small class="text-muted">@review.CreatedAt.ToString("dd/MM/yyyy")</small>
                                    </div>
                                    <p class="mb-0">@review.Comment</p>
                                </div>
                            </div>
                        }
                    }
                </div>

                @if(Model.TotalPages > 1)
                {
                    <div class="card-footer">
                        <nav aria-label="Review pagination">
                            <ul class="pagination justify-content-center mb-0">
                                @if(Model.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?page=@(Model.CurrentPage - 1)">Trước</a>
                                    </li>
                                }

                                @for(int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="?page=@i">@i</a>
                                    </li>
                                }

                                @if(Model.CurrentPage < Model.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?page=@(Model.CurrentPage + 1)">Sau</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

